<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XPensive" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary app color. -->
        <item name="colorPrimary">@color/teal_c7</item>
        <item name="colorPrimaryVariant">@color/teal_c7</item>
        <item name="colorOnPrimary">@color/gray_54</item>
        <!-- Secondary app color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Default font family -->
        <item name="android:fontFamily">@font/mulish</item>
        <item name="android:textColor">@color/gray_54</item>
    </style>

    <style name="Theme.XPensive.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.XPensive.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.XPensive.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:minHeight">@dimen/add_source_input_min_height</item>
        <!--<item name="boxBackgroundColor">@android:color/white</item>-->
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/rounded_rectangle_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/rounded_rectangle_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/rounded_rectangle_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/rounded_rectangle_radius</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">@dimen/rounded_rectangle_border_width</item>
    </style>
</resources>